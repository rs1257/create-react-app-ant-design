{
  "extends": ["stylelint-config-standard-scss", "stylelint-config-prettier-scss"],
  "rules": {
    "selector-class-pattern": "^[a-z]([a-z-]+)?(__([a-z]+-?)+)?(--([a-z]+-?)+){0,2}$",
    "selector-nested-pattern": "^[a-z&.](([a-z]+-?)+)?(__([a-z]+-?)+)?(--([a-z]+-?)+){0,2}$"
  },
  "ignoreFiles": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"]
}
